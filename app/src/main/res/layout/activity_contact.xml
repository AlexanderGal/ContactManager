<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/def_margin"
    tools:context="com.android.example.contactmanager.ui.ContactActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/ic_person_24dp" />

    <android.support.design.widget.TextInputLayout

        android:id="@+id/contact_name_textinputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Large">

        <EditText
            android:id="@+id/contact_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:hint="Contact name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contact_number_textinputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Large">

        <EditText
            android:id="@+id/contact_number_edittext"
            android:layout_width="match_parent"
            android:hint="@string/number"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:hint="8 999 999 99 99" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/def_margin">

        <Button
            android:id="@+id/contact_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete" />

        <Button
            android:id="@+id/contact_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save" />

    </LinearLayout>
</LinearLayout>
